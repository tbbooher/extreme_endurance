= form_for @system do |f|
  -if @system.errors.any?
    #error_explanation
      %h2= "#{pluralize(@system.errors.count, "error")} prohibited this system from being saved:"
      %ul
        - @system.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :max_speed
    = f.text_field :max_speed
  .field
    = f.label :endurance
    = f.text_field :endurance
  .field
    = f.label :service_ceiling
    = f.text_field :service_ceiling
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :payload_lbs
    = f.text_field :payload_lbs
  .actions
    = f.submit 'Save'
